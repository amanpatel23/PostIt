
<link rel="stylesheet" href="/css/userSignIn.css">

<div id="signIn__outer">
    <div id="signIn__inner">
        <h3>SignIn</h3>
        <form action="/users/createSession" method="POST">
            <div id="form__fields">
        
                <label class="field__name" for="email">Email</label>
                <input id="email" type="email" name="email" required>
            
                <label class="field__name" for="password">Password</label>
                <input id="password" type="password" name="password" required>
            </div>
        
            <input type="submit" value="Sign In">
        </form>
        <div id="forgot__password">
            <a href="/users/forgotPassword">forgot password?</a>
        </div>
    </div>
</div>